<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="open_sans_font">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>
    </style>

    <style name="TextColor" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/text_input_layout_hint</item>
        <item name="colorControlActivated">@color/contact_item_name_color</item>
    </style>

    <style name="TextInputLayout">
        <item name="theme">@style/TextColor</item>
        <item name="hintTextColor">@color/text_input_layout_hint</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="boxBackgroundMode">none</item>
    </style>



</resources>